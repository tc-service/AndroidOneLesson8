<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FAEABB"
    android:foregroundGravity="center_vertical"
    app:layout_anchorGravity="center"
    tools:context=".ui.MyNotesFragment">

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imNoteName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text" />

    <ImageView
        android:id="@+id/imNoteName"
        android:layout_width="0dp"
        android:layout_height="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNote"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/daily_notes" />

</androidx.constraintlayout.widget.ConstraintLayout>